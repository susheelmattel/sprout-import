<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <!--指定形狀的填充色-->
            <solid android:color="@color/white_menu"/>

            <!--設定內容區域離邊界的間距-->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="0.5dp"
                android:color="@color/color_view_line" />
        </shape>
    </item>
</layer-list>