<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--指定形狀的填充色-->
    <solid android:color="@color/color_sleep_dlg_save_bg"/>

    <!--設定內容區域離邊界的間距-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!--設定圓角，只適用於 rectangle-->
    <corners android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"/>

    <!--設定描邊-->
    <stroke
        android:width="0.5dp"
        android:color="@color/color_view_line" />

</shape>