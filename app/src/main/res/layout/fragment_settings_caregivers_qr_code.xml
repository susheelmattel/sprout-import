<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sproutling.ui.widget.ShTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/settings_caregivers_qr_code_title"
        style="@style/SubtextFour.8"/>

    <RelativeLayout
        android:id="@+id/qr_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:scaleType="fitCenter"
            android:cropToPadding="true"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/qr_code_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qr_bg_only" />
    </RelativeLayout>


    <com.sproutling.ui.widget.ShTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_code_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/settings_caregivers_qr_code_message"
        style="@style/SubtextFour.8"/>


    <com.sproutling.ui.widget.ShTextView
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_refresh"
        android:drawablePadding="5dp"
        android:text="@string/settings_caregivers_qr_code_generate"
        style="@style/SubtextEight.4"/>

</RelativeLayout>