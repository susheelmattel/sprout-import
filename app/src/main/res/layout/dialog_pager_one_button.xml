<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialogfragment_bg">

    <android.support.v4.view.ViewPager
        android:id="@+id/info_pager"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        />

    <LinearLayout
        android:id="@+id/dot_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_pager"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dot_layout"
        android:background="@color/lightGrey"
        android:orientation="horizontal"/>

    <com.sproutling.ui.widget.ShTextView
        android:id="@+id/tv_close"
        style="@style/SubtextFive.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:background="?selectableItemBackground"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin2"
        android:text="@string/close"/>
</RelativeLayout>
