<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogfragment_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="225dp"
            android:layout_height="196dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_setting_up_2"/>

        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/title"
            style="@style/SubtextThree.10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/setup_how_to_charge_dialog_title"/>

        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/description"
            style="@style/SubtextFour.10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:text="@string/setup_how_to_charge_dialog_description"/>
    </RelativeLayout>
</ScrollView>
