<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_zzz_log_sleep"
                android:layout_gravity="center_horizontal"/>

            <com.sproutling.ui.widget.ShTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_data_status_logsleep"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            style="@style/HeaderTwo.6"/>

            <com.sproutling.ui.widget.ShTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_sproutling_learn_logsleep"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_horizontal"
                style="@style/SubtextOne.5"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="32dp"
                android:src="@drawable/gradient_1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_date_learn"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_chen_was_born"
                android:id="@+id/imageView2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fog"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="18dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fog"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="18dp"/>

        </RelativeLayout>

        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/txt_born"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal"
            android:text=""
            style="@style/SubtextOne.5"/>
    </LinearLayout>
</LinearLayout>