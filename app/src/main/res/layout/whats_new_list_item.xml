<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_whats_new_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin3"
    android:layout_marginEnd="@dimen/margin3">

    <ImageView
        android:id="@+id/image_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_bullet_round"
        android:alpha="0.5"/>

    <com.sproutling.ui.widget.ShTextView
        android:id="@+id/new_feature_description"
        style="@style/SubtextFour.10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="@dimen/margin"
        android:layout_toEndOf="@+id/image_bullet"
        android:text="@string/the_learning_baby_monitor_msg" />

</RelativeLayout>