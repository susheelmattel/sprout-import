                android:layout_marginEnd="15dp"
                android:text="@string/expectations_section_2_content"
                style="@style/SubtextOne.7" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/expectations_sleeping_baby"/>

            <com.sproutling.ui.widget.ShTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/expectations_section_3_title"
                style="@style/HeaderTwo.7" />

            <com.sproutling.ui.widget.ShTextView
                android:id="@+id/section_3_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/expectations_section_3_content"
                style="@style/SubtextOne.7" />

            <com.sproutling.ui.widget.ShTextView
