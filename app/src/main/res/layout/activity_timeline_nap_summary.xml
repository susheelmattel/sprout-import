<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <com.sproutling.ui.widget.ShTextView
        android:id="@+id/night_dlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/when_is_night_sleep"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_light_bulb_small"
        android:drawablePadding="10dp"
        style="@style/SubtextFive.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include android:id="@+id/navigation_layout"
            layout="@layout/navigation_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@color/tealish2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@color/greyish" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@color/marigold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@color/marigold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <com.sproutling.ui.widget.ShTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/nap_time_asleep"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.4"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <com.sproutling.ui.widget.ShTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/nap_time_stirring"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.4"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <com.sproutling.ui.widget.ShTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/nap_time_awake"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.4"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <com.sproutling.ui.widget.ShTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/nap_wakings"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sproutling.ui.widget.ShTextView
                    android:id="@+id/time_asleep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.3"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <com.sproutling.ui.widget.ShTextView
                    android:id="@+id/time_stirring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.3"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <com.sproutling.ui.widget.ShTextView
                    android:id="@+id/time_awake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.3"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E7E7E7" />

                <com.sproutling.ui.widget.ShTextView
                    android:id="@+id/wakings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    style="@style/SubtextOne.3"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/screen_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_horizontal_phone"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/last_night_barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>

        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manually_adjust_nap"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            style="@style/SubtextFive.3"/>

        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/delete_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nap_summary_delete_event"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            style="@style/SubtextSix.3"/>

    </LinearLayout>
</FrameLayout>