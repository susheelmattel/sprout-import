    <com.sproutling.ui.widget.ShTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/input_measurement_description"
        style="@style/SubtextOne.4"/>

    <LinearLayout
        android:id="@+id/headLayout"
        android:layout_marginTop="34dp"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/measurement_head_bg_normal">
        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/headSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_gravity="center_vertical"
            android:text="@string/input_measurement_head_circumference"
            style="@style/SubtextOne.6"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_down_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/spacerView1"
        android:layout_width="match_parent"
        android:layout_height="21dp"/>

    <NumberPicker
        android:id="@+id/headPicker"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="262dp"
        android:theme="@style/AppTheme.Picker"
        android:layout_height="116dp"/>

    <LinearLayout
        android:id="@+id/weightLayout"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/measurement_weight_bg_normal">
        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/weightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_gravity="center_vertical"
            android:text="@string/input_measurement_weight"
            style="@style/SubtextOne.6"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_down_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/spacerView2"
