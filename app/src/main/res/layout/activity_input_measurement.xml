    <LinearLayout
        android:id="@+id/lengthLayout"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/measurement_length_bg_normal">
        <com.sproutling.ui.widget.ShTextView
            android:id="@+id/lengthSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_gravity="center_vertical"
            android:text="@string/input_measurement_length"
            style="@style/SubtextOne.6"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_down_arrow"/>
    </LinearLayout>

    <NumberPicker
        android:id="@+id/lengthPicker"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="262dp"
        android:theme="@style/AppTheme.Picker"
        android:layout_height="116dp"/>

