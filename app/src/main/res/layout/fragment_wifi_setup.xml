<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/info_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dot_layout"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/dot_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_scan_wifi"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
    </LinearLayout>

    <Button
        android:id="@+id/btn_scan_wifi"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin2"
        android:paddingLeft="@dimen/margin2"
        android:paddingRight="@dimen/margin2"
        android:text="@string/scan_for_wifi_networks"
        android:textAllCaps="false"/>

</RelativeLayout>
