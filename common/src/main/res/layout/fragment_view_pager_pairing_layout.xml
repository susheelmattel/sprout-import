<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerInstruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dot_layout"
        />

    <LinearLayout
        android:id="@+id/dot_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/note"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin5"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/note"
        style="@style/BottomTextNoteStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin3"
        android:layout_marginRight="@dimen/margin3"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:text="@string/pairing_device_ble_note"/>

</RelativeLayout>