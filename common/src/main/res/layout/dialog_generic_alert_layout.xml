<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogfragment_bg">

    <TextView
        android:id="@+id/title"
        style="@style/SubtextThree.10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/margin3"
        android:paddingStart="@dimen/margin3"
        android:paddingEnd="@dimen/margin3"
        android:paddingBottom="@dimen/margin2"
        android:text="Title"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/message"
        style="@style/SubtextOne.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/margin3"
        android:paddingEnd="@dimen/margin3"
        android:paddingBottom="@dimen/margin4"
        android:text="Message" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/message"
        android:background="@color/grey15" />

    <TextView
        android:id="@+id/button2_txt"
        style="@style/SubtextFive.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/divider"
        android:padding="@dimen/dialog_button_padding"
        android:text="@string/bluetooth_screen_turn_on"
        android:textAllCaps="true"
        android:textColor="@color/blue_btn" />

    <TextView
        android:id="@+id/button1_txt"
        style="@style/SubtextFive.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_toStartOf="@id/button2_txt"
        android:padding="@dimen/dialog_button_padding"
        android:text="@string/child_profile_cancel"
        android:textAllCaps="true"
        android:textColor="@color/blue_btn" />

</RelativeLayout>
